# Issue Tracker Configuration

# Folder where issue data is stored (database, config, etc.)
# Default: ./.issues
ISSUES_FOLDER=./.issues

# Optional: Direct path to database file (overrides ISSUES_FOLDER/issues.db)
# ISSUES_DB_PATH=./.issues/issues.db

# Enable SQL query logging
ISSUES_DB_ECHO=false

# Git Integration
# Enable git operations (commit, push, pull) for issue sync
# Default: false (disabled)
# Set to 'true' to enable git integration
ISSUES_GIT_ENABLED=false

# Daemon Configuration
# ISSUES_AUTO_START_DAEMON=true
# ISSUES_DAEMON_MODE=poll
# ISSUES_SYNC_INTERVAL=5
